    <!--tell to tomcat about HelloWorldServlet-->
    <servlet>
       <servlet-name>Anyname</servlet-name>
       <servlet-class>com.chengang.week2.demo.HelloWorldServlet</servlet-class>
    </servlet>
<servlet>
    <servlet-name>LifeCycleServlet</servlet-name>
    <servlet-class>com.chengang.week3.demo.lifeCycleServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>anyname</servlet-name>>
    <url-pattern>/hello/</url-pattern><!--url always start with /-->
    </servlet-mapping>>
    <servlet-mapping>
        <sevlet-name>LifeCycleServlet</sevlet-name>
        <url-pattern>life</url-pattern>
        <!--/life ==LifeCycleServlet==com.chengang.week3.demo.lifeCycleServlet-->
</servlet-mapping>
</web-app>